{
  "name": "@vectoral/lyra",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "bench": "bun run lint:fix && vitest --config .config/vitest.config.ts bench",
    "build": "bun run lint:fix && rm -rf dist && tsc --project .config/tsconfig.json",
    "clean": "rm -rf node_modules bun.lock dist && bun install",
    "commit": "bun run lint:fix && git-cz",
    "lint": "eslint . --color --config .config/eslint.config.js",
    "lint:fix": "eslint . --color --fix --config .config/eslint.config.js",
    "prepublishOnly": "bun run build",
    "test": "bun run lint && vitest --config .config/vitest.config.ts",
    "test:watch": "bun run test --watch",
    "test:coverage": "bun run test --coverage",
    "docs:generate": "typedoc --options .config/typedoc.config.json"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/bun": "^1.3.3",
    "@vitest/coverage-v8": "^4.0.13",
    "eslint": "^9.39.1",
    "semantic-release": "^25.0.2",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vite": "^7.2.4",
    "vitest": "^4.0.13"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            ".github/docs/generated"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}