{
  "name": "@vectoral/lyra",
  "version": "1.0.3",
  "type": "module",
  "description": "A lightweight engine for building precomputed, faceted index bundles from structured data",
  "keywords": [
    "faceted-search",
    "index",
    "bundle",
    "query",
    "filter",
    "agent",
    "llm",
    "structured-data",
    "dashboard",
    "edge-computing"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vectoral-io/lyra.git"
  },
  "bugs": {
    "url": "https://github.com/vectoral-io/lyra/issues"
  },
  "homepage": "https://github.com/vectoral-io/lyra#readme",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "bench:run": "bun run lint:fix && bun run tests/bench/run-benchmarks.ts",
    "bench:check": "bun run lint:fix && bun run tests/bench/check-benchmarks.ts",
    "bench:ci": "bun run bench:run && bun run bench:check",
    "build": "bun run lint:fix && rm -rf dist && vite build --config .config/vite.config.ts && tsc --project .config/tsconfig.json",
    "clean": "rm -rf node_modules bun.lock dist && bun install",
    "commit": "bun run lint:fix && git-cz",
    "lint": "eslint . --color --config .config/eslint.config.js",
    "lint:fix": "eslint . --color --fix --config .config/eslint.config.js",
    "prepublishOnly": "bun run build",
    "test": "bun run lint && vitest --config .config/vitest.config.ts",
    "test:watch": "bun run test --watch",
    "test:coverage": "bun run test --coverage",
    "docs:generate": "typedoc --options .config/typedoc.config.json",
    "example:build": "bun run examples/basic-usage/build-bundle.ts",
    "example:query": "bun run examples/basic-usage/query-bundle.ts",
    "example:test": "bun run example:build && bun run example:query",
    "example:agent:build": "bun run examples/agent-tool/build-bundle.ts",
    "example:agent:run": "bun run examples/agent-tool/agent-tool.ts",
    "example:agent": "bun run example:agent:build && bun run example:agent:run"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/bun": "^1.3.3",
    "@vitest/coverage-v8": "^4.0.13",
    "eslint": "^9.39.1",
    "fast-check": "^4.3.0",
    "semantic-release": "^25.0.2",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vite": "^7.2.4",
    "vitest": "^4.0.13"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "repositoryUrl": "https://github.com/vectoral-io/lyra.git",
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            ".github/docs/generated"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
